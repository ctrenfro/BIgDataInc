---
import Hamburger from "./Hamburger.astro";
---

<Hamburger />
<div
  class="flex flex-row justify-between items-center h-24 max-w-[1240px] mx-auto text-white relative z"
>
  <h1 class="w-full text-3xl text-[#00df9a] pl-10 font-bold relative z-10">
    Big Data Inc.
  </h1>
  <ul class="flex flex-row nav-links">
    <a class="p-4 cursor-pointer">Home</a>
    <a class="p-4 cursor-pointer">Company</a>
    <a class="p-4 cursor-pointer">Resources</a>
    <a class="p-4 cursor-pointer">About</a>
    <a class="p-4 cursor-pointer">Contact</a>
  </ul>

  <div class="fixed left-0 top-0 w-[60%] h-full mobileNav">
    <ul class="p-4 uppercase mobileNav-links font-bold">
      <a class="p-4 border-b border-gray-600 cursor-pointer">Home</a>
      <a class="p-4 border-b border-gray-600 cursor-pointer">Company</a>
      <a class="p-4 border-b border-gray-600 cursor-pointer">Resources</a>
      <a class="p-4 border-b border-gray-600 cursor-pointer">About</a>
      <a class="p-4">Contact</a>
    </ul>
  </div>
</div>

<style>
  .mobileNav {
    top: 5rem;
  }

  .mobileNav-links {
    display: flex;
    flex-direction: column;
    opacity: 0;
    height: 0;
    margin-top: 5rem;
  }

  .nav-links {
    position: relative;
    right: 5rem;
    width: 100%;
    padding: 0;
    margin: 0;
    opacity: 0;
    height: 0;
    flex-direction: column;
  }

  .nav-links a {
    display: block;
    text-align: center;
    padding: 10px 0;
    text-decoration: none;
    font-size: 1.2rem;
    font-weight: bold;
    text-transform: uppercase;
    transition: 1s ease-in-out;
  }

  .nav-links a:hover,
  a:focus {
    background-color: #ff9776;
  }

  .expanded {
    --tw-bg-opacity: 1;
    background-color: rgb(0 3 0 / var(--tw-bg-opacity));
    --tw-border-opacity: 1;
    border-right: 1px solid rgb(17 24 39 / var(--tw-border-opacity));
  }

  .expanded-links,
  .expandedTitle {
    opacity: 1;
    height: auto;
    transition: 1s ease-in;
  }

  @media screen and (min-width: 636px) {
    .mobileNav {
      background: none;
      border: none;
    }

    .mobileNav-links {
      opacity: 0;
      height: 0;
    }

    .nav-links {
      margin-left: 5em;
      display: block;
      position: static;
      width: auto;
      background: none;
      padding-right: 64px;
      opacity: 1;
      height: auto;
      flex-direction: row;
    }

    .nav-links a {
      padding: 15px 10px;
    }
  }
</style>
